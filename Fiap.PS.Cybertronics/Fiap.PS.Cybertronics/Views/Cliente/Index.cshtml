@model Cliente

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<form class="form-inline mb-2" asp-action="index" method="get">
    <input placeholder="Digite o nome" type="text" name="nome" class="form-control" />
    <input type="submit" value="Pesquisar" class="btn btn-success ml-2" />
</form>

<table class="table">
    <tr>
        <th>Nome</th>
        <th>Email</th>
        <th>Telefone</th>
        <th>Endereço</th>
        <th></th>
    </tr>
    @foreach (var item in ViewBag.clientes)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Email</td>
            <td>@item.Telefone</td>
            <td>@item.Endereco</td>
            <td>
                <a asp-action="detalhes" asp-route-id="@item.ClienteId" class="btn btn-sm btn-outline-info">Detalhes</a>
            </td>
        </tr>
    }
</table>

<h2>Cadastro de Clientes</h2>

<msg mensagem="@TempData["msg"]"></msg>

<form asp-action="cadastrar">

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Endereco"></label>
        <input asp-for="Endereco" class="form-control" />
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-primary" />

</form>