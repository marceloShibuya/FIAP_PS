@model Empresa

@{
    ViewData["Title"] = "Index";
}

<h1>Empresas</h1>

<form asp-action="index" method="get" class="form-inline mb-2">
    <input type="text" placeholder="Digite o nome da empresa" name="nome" class="form-control mr-2" />
    <input type="submit" value="Pesquisar" class="btn btn-success" />
</form>

<table class="table">
    <tr>
        <th>CNPJ</th>
        <th>Nome</th>
        <th>Contato</th>
    </tr>
    @foreach (var item in ViewBag.empresas)
    {
        <tr>
            <td>@item.Cnpj</td>
            <td>@item.Nome</td>
            <td>@item.Contato</td>
        </tr>
    }
</table>

<h2>Cadastro da Empresa</h2>

<msg mensagem="@TempData["msg"]"></msg>

<form asp-action="cadastrar">

    <div class="form-group">
        <label asp-for="Cnpj"></label>
        <input asp-for="Cnpj" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Contato"></label>
        <input asp-for="Contato" class="form-control" />
    </div>

    <input type="submit" value="Cadastrar" class="btn btn-primary" />

</form>
